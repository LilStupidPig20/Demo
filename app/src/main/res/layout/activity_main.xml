<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_menu"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_menu"
    tools:context=".MainActivity">
    <!--лучше указывать не в px в dp
    формула dp = px / (dpi / 160)
    у нас dpi = 420, значит
    dp = px / 2,625-->
    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="65px"

        android:layout_marginLeft="94px"
        android:layout_marginTop="57px"
        android:layout_marginRight="94px"
        android:background="@color/white" />

    <View
        android:id="@+id/rectangle_1"
        android:layout_width="1080px"
        android:layout_height="1742px"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="178px"
        android:background="@drawable/rectangle_1" />

    <!--это колхозный закрывающий прямоуголник снизу-->
    <View
        android:id="@+id/rectangle_0"
        android:layout_width="match_parent"
        android:layout_height="78dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="580dp"
        android:background="@color/white" />

    <Button
        android:id="@+id/button1"
        android:layout_width="match_parent"

        android:layout_height="322px"
        android:layout_marginLeft="50px"
        android:layout_marginTop="270px"
        android:layout_marginRight="52px"
        android:backgroundTint="@color/element_main_menu"
        android:stateListAnimator="@null"
        android:text="Button" />

    <Button
        android:id="@+id/button2"
        android:layout_width="match_parent"
        android:layout_height="322px"
        android:layout_below="@id/button1"
        android:layout_marginLeft="50px"
        android:layout_marginTop="37px"
        android:layout_marginRight="52px"
        android:backgroundTint="@color/element_main_menu"
        android:stateListAnimator="@null"
        android:text="Button" />

    <Button
        android:id="@+id/button3"
        android:layout_width="match_parent"
        android:layout_height="322px"
        android:layout_below="@id/button2"
        android:layout_marginLeft="50px"
        android:layout_marginTop="37px"
        android:layout_marginRight="52px"
        android:backgroundTint="@color/element_main_menu"
        android:stateListAnimator="@null"
        android:text="Button" />

    <Button
        android:id="@+id/button4"
        android:layout_width="match_parent"
        android:layout_height="322px"
        android:layout_below="@id/button3"
        android:layout_marginLeft="50px"
        android:layout_marginTop="37px"
        android:layout_marginRight="52px"
        android:backgroundTint="@color/element_main_menu"
        android:stateListAnimator="@null"
        android:text="Button" />


</RelativeLayout>

