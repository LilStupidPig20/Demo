<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_menu"
    tools:context=".TheoryEspresso">

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="65px"

        android:layout_marginLeft="36dp"
        android:layout_marginTop="22dp"
        android:layout_marginRight="36dp"
        android:background="@color/white"
        />

    <View
        android:id="@+id/rectangle_1"
        android:layout_width="1080px"
        android:layout_height="1742px"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="179px"
        android:background="@drawable/rectangle_1"
        />

    <!--это колхозный закрывающий прямоуголник снизу-->
    <View
        android:id="@+id/rectangle_0"
        android:layout_width="1080.03dp"
        android:layout_height="300dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="510dp"
        android:background="@color/white"
        />

    <View
        android:id="@+id/heading_rectangle"
        android:layout_width="404px"
        android:layout_height="184px"
        android:layout_marginTop="250px"
        android:layout_marginLeft="338px"
        android:background="@drawable/heading_rectangle_for_common_windows"
        />

    <TextView
        android:id="@+id/heading_text_machine_test"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/exo_2_semibold"
        android:lineHeight="63px"
        android:text="ЭСПРЕССО"
        android:textFontWeight="600"
        android:textSize="52px"
        android:textColor="@color/black"
        android:layout_marginTop="300px"
        android:layout_marginLeft="415px"/>

    <TextView
        android:id="@+id/text1_machine_test"
        android:text="@string/espresso_theory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/exo_2"
        android:lineHeight="54px"
        android:textFontWeight="400"
        android:textSize="45px"
        android:textAllCaps="true"
        android:textColor="@color/black"
        android:layout_below="@id/heading_rectangle"
        android:layout_marginTop="74px"
        android:layout_marginLeft="95px"
        />

</RelativeLayout>
